{
    "name": "nodejs-getting-started",
    "description": "End to end sample for running Node.js applications on Google Cloud Platform",
    "version": "1.0.0",
    "license": "Apache-2.0",
    "author": "Google Inc.",
    "engines": {
        "node": ">=8"
    },
    "repository": "https://github.com/GoogleCloudPlatform/nodejs-getting-started",
    "main": "app.js",
    "cloud-repo-tools": {
        "requiresKeyFile": true,
        "requiresProjectId": true,
        "test": {
            "app": {
                "args": [
                    "app.js"
                ],
                "msg": "Hello, world!"
            }
        }
    },
    "scripts": {
        "start": "npx pm2 start app.js",
        "stop": "npx pm2 stop app.js",
        "restart": "npx pm2 restart app.js",
        "delete": "npx pm2 delete app.js",
        "dev": "npx pm2 start app.js --watch && sass --watch scss:public/css",
        "e2e": "repo-tools test deploy",
        "test": "repo-tools test app",
        "cover": "nyc --cache npm test; nyc report --reporter=html",
        "scss": "sass --watch scss:public/css"
    },
    "dependencies": {
        "@google-cloud/datastore": "^4.2.0",
        "express": "^4.16.4"
    },
    "devDependencies": {
        "@google-cloud/nodejs-repo-tools": "^3.0.0",
        "ava": "^0.25.0",
        "pm2": "^3.5.1",
        "supertest": "^4.0.0"
    }
}
